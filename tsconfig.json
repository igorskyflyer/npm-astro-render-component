{
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*", "test/**/*", "dist/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@astro-render/*": [
                "node_modules/astro/dist/runtime/server/render/astro/*"
            ]
        },
        "target": "ES2022",
        "module": "NodeNext",
        "declaration": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declarationDir": "./dist",
        "moduleResolution": "nodenext",
        "noEmitOnError": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true
    }
}
